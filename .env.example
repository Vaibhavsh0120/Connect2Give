# =============================================================================
# Connect2Give Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# Django Settings
# =============================================================================
SECRET_KEY='your-secret-key-here-generate-a-new-one'
DEBUG=True

# =============================================================================
# Database Credentials
# =============================================================================
DB_NAME='connect2give_db'
DB_USER='your_mysql_username'
DB_PASSWORD='your_mysql_password'
DB_HOST='localhost'
DB_PORT='3306'

# =============================================================================
# Email Settings (Gmail SMTP)
# =============================================================================
# For Gmail, you need to use an App Password, not your regular password
# Generate one at: https://myaccount.google.com/apppasswords
EMAIL_BACKEND='django.core.mail.backends.smtp.EmailBackend'
EMAIL_HOST='smtp.gmail.com'
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER='your-email@gmail.com'
EMAIL_HOST_PASSWORD='your-app-password-here'
DEFAULT_FROM_EMAIL='your-email@gmail.com'

# =============================================================================
# Google OAuth Credentials
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID='your-client-id-here.apps.googleusercontent.com'
GOOGLE_OAUTH_CLIENT_SECRET='your-client-secret-here'

# =============================================================================
# Site Configuration
# =============================================================================
# Your production site URL (no trailing slash)
SITE_URL='http://localhost:8000'
# Comma-separated list of allowed hosts (e.g., 'localhost,127.0.0.1,yourdomain.com')
ALLOWED_HOSTS='localhost,127.0.0.1'

# =============================================================================
# VAPID Keys for Web Push Notifications
# =============================================================================
# Generate VAPID keys using: python -c "from py_vapid import Vapid; vapid = Vapid(); vapid.generate_keys(); print('Public Key:', vapid.public_key.saveKey('der').hex()); print('Private Key:', vapid.private_key.saveKey('der').hex())"
# Or use: https://www.npmjs.com/package/web-push (web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# Email Settings (REQUIRED for volunteer registration emails)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-mail@gmail.com
EMAIL_HOST_PASSWORD=xxxx xxxx xxxx xxxx
DEFAULT_FROM_EMAIL=your-mail@gmail.com

